<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_height="match_parent"
  android:layout_width="match_parent"
  android:orientation="vertical">

  <com.plaid.internal.core.plaidstyleutils.PlaidNavigationBar
    android:id="@+id/plaid_navigation"
    android:layout_height="@dimen/plaid_navigation_height"
    android:layout_width="match_parent" />

  <com.plaid.internal.core.plaidstyleutils.PlaidInstitutionHeaderItem
    android:id="@+id/plaid_institution"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/plaid_space_4x"
    android:layout_marginStart="@dimen/plaid_space_4x"
    android:layout_width="match_parent"
    android:visibility="gone"
    tools:visibility="visible" />

  <com.plaid.internal.core.plaidstyleutils.PlaidTitle
    android:id="@+id/plaid_button_message"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/plaid_space_4x"
    android:layout_marginStart="@dimen/plaid_space_4x"
    android:layout_width="match_parent"
    android:visibility="gone"
    tools:plaid_subtitle="Your progress will be lost and your credentials will be removed for security"
    tools:plaid_title="Are you sure you want to exit?"
    tools:visibility="visible" />

  <TextView
    android:id="@+id/plaid_button_disclaimer"
    style="@style/PlaidText.H5.Regular"
    android:layout_height="0dp"
    android:layout_marginBottom="@dimen/plaid_space_2x"
    android:layout_marginEnd="@dimen/plaid_space_4x"
    android:layout_marginStart="@dimen/plaid_space_4x"
    android:layout_marginTop="@dimen/plaid_space_2x"
    android:layout_weight="1"
    android:layout_width="match_parent"
    tools:text="Your progress will be lost and your credentials will be removed for security" />

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/plaid_button_list_content"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/plaid_space_4x"
    android:paddingEnd="@dimen/plaid_space_4x"
    android:paddingStart="@dimen/plaid_space_4x"
    android:scrollbars="vertical"
    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

</LinearLayout>

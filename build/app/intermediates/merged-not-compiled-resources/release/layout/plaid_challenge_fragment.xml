<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context="com.plaid.internal.link.LinkActivity">

  <com.plaid.internal.core.plaidstyleutils.PlaidNavigationBar
    android:id="@+id/plaid_navigation"
    android:layout_width="match_parent"
    android:layout_height="@dimen/plaid_navigation_height" />

  <com.plaid.internal.core.plaidstyleutils.PlaidInstitutionHeaderItem
    android:id="@+id/plaid_institution"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginStart="@dimen/plaid_space_4x"
    android:layout_marginEnd="@dimen/plaid_space_4x"
    android:visibility="gone"
    tools:visibility="visible" />

  <TextView
    android:id="@+id/header"
    style="@style/PlaidText.H2.ExtraBold"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/plaid_space_1x"
    android:enabled="true"
    android:gravity="center"
    android:paddingBottom="@dimen/plaid_space_1x"
    android:textColor="?plaidTextColorH"
    android:visibility="gone"
    tools:text="header"
    tools:visibility="visible" />

  <WebView
    android:id="@+id/challenge_webview"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1" />

</LinearLayout>

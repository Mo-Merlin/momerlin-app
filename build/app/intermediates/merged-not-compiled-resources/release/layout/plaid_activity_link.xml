<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/link_activity_root"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <androidx.fragment.app.FragmentContainerView
    android:id="@+id/fragment_container"
    style="@style/PlaidTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.plaid.internal.link.LinkActivity" />

  <com.plaid.internal.core.plaidstyleutils.PlaidLoadingView
    android:id="@+id/plaid_rising_tide"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="?plaidThemeVisibility" />
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:paddingBottom="@dimen/plaid_space_2x">

  <com.plaid.internal.core.plaidstyleutils.PlaidNavigationBar
    android:id="@+id/plaid_navigation"
    android:layout_width="match_parent"
    android:layout_height="@dimen/plaid_navigation_height" />

  <com.plaid.internal.core.plaidstyleutils.PlaidInstitutionHeaderItem
    android:id="@+id/plaid_institution"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/plaid_space_4x"
    android:layout_marginEnd="@dimen/plaid_space_4x"
    android:visibility="gone"
    tools:visibility="visible" />

  <androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:fillViewport="true">

    <LinearLayout
      android:id="@+id/scrollable_content"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingStart="@dimen/plaid_space_4x"
      android:paddingEnd="@dimen/plaid_space_4x"
      android:paddingBottom="@dimen/plaid_space_4x">

      <ImageView
        android:id="@+id/button_with_cards_header_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/plaid_header_height"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:visibility="gone"
        tools:src="@drawable/pl_illustration_scene_add_details"
        tools:visibility="visible" />

      <TextView
        android:id="@+id/button_with_cards_header"
        style="@style/PlaidText.H2.ExtraBold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible" />

      <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/button_with_cards_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/plaid_space_4x"
        android:layout_marginBottom="@dimen/plaid_space_4x"
        android:layout_weight="1"
        android:clipToPadding="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

      <com.plaid.internal.core.plaidstyleutils.PlaidPrimaryButton
        android:id="@+id/primaryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible" />

      <com.plaid.internal.core.plaidstyleutils.PlaidTertiaryButton
        android:id="@+id/secondaryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible" />

    </LinearLayout>

  </androidx.core.widget.NestedScrollView>

</LinearLayout>

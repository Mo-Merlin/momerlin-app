<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:orientation="vertical"
  tools:parentTag="android.widget.LinearLayout">

  <TextView
    android:id="@+id/plaid_bottom_sheet_title"
    style="@style/PlaidText.H2.ExtraBold"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:padding="@dimen/plaid_space_2x"
    tools:text="Are you sure you want to disconnect this account" />

  <TextView
    android:id="@+id/plaid_bottom_sheet_summary"
    style="@style/PlaidText.B3.Regular"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:paddingStart="@dimen/plaid_space_2x"
    android:paddingEnd="@dimen/plaid_space_2x"
    tools:text="Disconnecting this account may prevent certain Mint features from working. This action won't delete the data Plaid or Mint have accessed in the past. To make sure data is deleted, we recommend contacting Mint directly." />

  <com.plaid.internal.core.plaidstyleutils.PlaidPrimaryButton
    android:id="@+id/plaid_bottom_sheet_primary_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="@dimen/plaid_space_2x"
    android:layout_marginTop="@dimen/plaid_space_2x"
    android:layout_marginEnd="@dimen/plaid_space_2x"
    tools:text="Continue" />

  <com.plaid.internal.core.plaidstyleutils.PlaidSecondaryButton
    android:id="@+id/plaid_bottom_sheet_secondary_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="@dimen/plaid_space_2x"
    android:layout_marginTop="@dimen/plaid_space_2x"
    android:layout_marginEnd="@dimen/plaid_space_2x"
    android:layout_marginBottom="@dimen/plaid_space_2x"
    android:visibility="gone"
    tools:text="Continue" />
</merge>

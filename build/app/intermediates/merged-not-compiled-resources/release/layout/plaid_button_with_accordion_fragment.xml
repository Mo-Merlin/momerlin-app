<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <com.plaid.internal.core.plaidstyleutils.PlaidNavigationBar
    android:id="@+id/plaid_navigation"
    android:layout_width="match_parent"
    android:layout_height="@dimen/plaid_navigation_height" />

  <com.plaid.internal.core.plaidstyleutils.PlaidInstitutionHeaderItem
    android:id="@+id/plaid_institution"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/plaid_space_4x"
    android:layout_marginEnd="@dimen/plaid_space_4x"
    android:visibility="gone"
    tools:visibility="visible" />

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:fillViewport="true">

    <LinearLayout
      android:id="@+id/scrollable_content"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:divider="?android:listDivider"
      android:orientation="vertical"
      android:paddingStart="@dimen/plaid_space_4x"
      android:paddingEnd="@dimen/plaid_space_4x"
      android:paddingBottom="@dimen/plaid_space_4x">

      <ImageView
        android:id="@+id/header_asset"
        android:layout_width="match_parent"
        android:layout_height="@dimen/plaid_header_height"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:visibility="gone"
        tools:src="@drawable/pl_illustration_scene_add_details"
        tools:visibility="visible" />

      <TextView
        android:id="@+id/plaid_pane_header"
        style="@style/PlaidText.H2.ExtraBold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/plaid_space_4x"
        android:visibility="gone"
        tools:text="This application is requesting access to your..."
        tools:visibility="visible" />

      <LinearLayout
        android:id="@+id/plaid_items_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="?android:listDivider"
        android:orientation="vertical"
        android:showDividers="middle" />

      <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

      <TextView
        android:id="@+id/plaid_button_disclaimer"
        style="@style/PlaidText.B3.Regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/plaid_space_1x"
        android:paddingBottom="@dimen/plaid_space_1x"
        android:visibility="gone"
        tools:visibility="visible" />

      <com.plaid.internal.core.plaidstyleutils.PlaidPrimaryButton
        android:id="@+id/primaryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible" />

      <com.plaid.internal.core.plaidstyleutils.PlaidSecondaryButton
        android:id="@+id/secondaryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/plaid_space_2x"
        android:visibility="gone"
        tools:text="secondary button"
        tools:visibility="visible" />

    </LinearLayout>

  </ScrollView>

</LinearLayout>

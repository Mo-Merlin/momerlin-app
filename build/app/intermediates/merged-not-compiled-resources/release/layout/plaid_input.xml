<merge xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

  <com.google.android.material.textfield.TextInputLayout
    android:id="@+id/plaid_input_layout"
    style="@style/PlaidInput"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:minHeight="@dimen/plaid_min_input_height">

    <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/plaid_input_edit_text"
      style="@style/PlaidInput.Regular"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:drawableEnd="@drawable/pl_icon_lock"
      android:drawableTint="@color/plaid_black_1000"
      android:lines="1"
      android:maxLines="1"
      android:textColorHint="@color/plaid_black_800"
      tools:hint="Hint" />

  </com.google.android.material.textfield.TextInputLayout>

  <com.plaid.ui_components.shimmer.ShimmerFrameLayout
    android:id="@+id/loading_layout"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:background="@android:color/transparent"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="@id/plaid_input_layout"
    app:layout_constraintEnd_toEndOf="@id/plaid_input_layout"
    app:layout_constraintStart_toStartOf="@id/plaid_input_layout"
    app:layout_constraintTop_toTopOf="@id/plaid_input_layout"
    tools:visibility="invisible">

    <LinearLayout
      android:id="@+id/loading_layout_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_centerInParent="true"
      android:gravity="center_vertical"
      android:orientation="horizontal">

      <ImageView
        android:layout_height="@dimen/plaid_space_3x"
        android:layout_marginEnd="@dimen/plaid_space_1x"
        android:layout_marginStart="@dimen/plaid_space_2x"
        android:layout_width="@dimen/plaid_space_3x"
        android:src="@drawable/pl_icon_checkmark"
        app:tint="@color/plaid_black_1000" />

      <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/plaid_space_2x"
        android:layout_marginEnd="@dimen/plaid_space_2x"
        android:background="@drawable/plaid_loading_background" />

    </LinearLayout>

  </com.plaid.ui_components.shimmer.ShimmerFrameLayout>

  <View
    android:id="@+id/error_guide"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="12dp"
    android:visibility="gone"
    app:layout_constraintEnd_toEndOf="@id/plaid_input_layout"
    app:layout_constraintStart_toStartOf="@id/plaid_input_layout"
    app:layout_constraintTop_toBottomOf="@id/plaid_input_layout"
    tools:visibility="visible" />

  <LinearLayout
    android:id="@+id/error_view"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:focusable="false"
    android:orientation="horizontal"
    android:visibility="gone"
    app:layout_constraintEnd_toEndOf="@id/plaid_input_layout"
    app:layout_constraintStart_toStartOf="@id/plaid_input_layout"
    app:layout_constraintTop_toBottomOf="@id/plaid_input_layout"
    tools:visibility="visible">

    <ImageView
      android:id="@+id/error_icon"
      android:layout_width="@dimen/plaid_space_3x"
      android:layout_height="@dimen/plaid_space_3x"
      android:src="@drawable/pl_icon_information"
      android:visibility="visible"
      app:tint="@color/plaid_red_800" />

    <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/error_text"
      style="@style/PlaidText.B1.Regular"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingStart="@dimen/plaid_space_1x"
      tools:text="Invalid input" />
  </LinearLayout>
</merge>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_height="match_parent"
  android:layout_width="match_parent"
  android:orientation="vertical"
  tools:context="com.plaid.internal.link.LinkActivity">

  <com.plaid.internal.core.plaidstyleutils.PlaidNavigationBar
    android:id="@+id/plaid_navigation"
    android:layout_height="@dimen/plaid_navigation_height"
    android:layout_width="match_parent" />

  <com.plaid.internal.core.plaidstyleutils.PlaidInstitutionHeaderItem
    android:id="@+id/plaid_institution"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/plaid_space_4x"
    android:layout_marginStart="@dimen/plaid_space_4x"
    android:layout_width="match_parent"
    android:visibility="gone"
    tools:visibility="visible" />

  <LinearLayout
    android:id="@+id/ordered_list_content"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <ScrollView
      android:fillViewport="true"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:layout_width="match_parent">

      <LinearLayout
        android:id="@+id/scrollable_content"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/plaid_space_4x"
        android:paddingEnd="@dimen/plaid_space_4x"
        android:paddingStart="@dimen/plaid_space_4x">

        <ImageView
          android:id="@+id/rendered_asset"
          android:layout_gravity="center"
          android:layout_height="@dimen/plaid_header_height"
          android:layout_width="match_parent"
          android:scaleType="fitCenter"
          android:visibility="gone"
          tools:src="@drawable/pl_illustration_scene_add_details"
          tools:visibility="visible" />

        <TextView
          android:id="@+id/header"
          style="@style/PlaidText.H2.ExtraBold"
          android:enabled="true"
          android:gravity="center"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/plaid_space_1x"
          android:layout_width="match_parent"
          android:paddingBottom="@dimen/plaid_space_1x"
          android:textColor="@color/plaid_text_black_1000"
          tools:text="header" />

        <LinearLayout
          android:id="@+id/ordered_list_items"
          android:layout_height="wrap_content"
          android:layout_width="match_parent"
          android:orientation="vertical" />

        <View
          android:layout_height="0dp"
          android:layout_weight="1"
          android:layout_width="wrap_content" />

        <TextView
          android:id="@+id/ordered_list_disclaimer"
          style="@style/PlaidText.B5.Regular"
          android:gravity="start"
          android:layout_height="wrap_content"
          android:layout_width="match_parent"
          android:visibility="gone"
          tools:text="button disclaimer"
          tools:visibility="visible" />

        <com.plaid.internal.core.plaidstyleutils.PlaidPrimaryButton
          android:id="@+id/primaryButton"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/plaid_space_2x"
          android:layout_width="match_parent"
          android:visibility="gone"
          tools:text="primary button"
          tools:visibility="visible" />

      </LinearLayout>

    </ScrollView>

  </LinearLayout>

</LinearLayout>

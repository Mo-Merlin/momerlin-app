<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_height="wrap_content"
  android:layout_width="match_parent"
  android:orientation="vertical">

  <TextView
    android:id="@+id/number"
    style="@style/PlaidText.H5.SemiBold"
    android:gravity="start"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/plaid_space_1x"
    android:layout_marginTop="@dimen/plaid_space_1x"
    android:layout_width="wrap_content"
    android:textColor="@color/plaid_text_black_1000"
    app:layout_constraintEnd_toStartOf="@id/label"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="1." />

  <TextView
    android:id="@+id/label"
    style="@style/PlaidText.H5.SemiBold"
    android:gravity="start"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/plaid_space_1x"
    android:layout_width="0dp"
    android:textColor="@color/plaid_text_black_1000"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/number"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="label" />

  <TextView
    android:id="@+id/detail"
    style="@style/PlaidText.B3.Regular"
    android:gravity="start"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/plaid_space_1x"
    android:layout_width="0dp"
    android:paddingBottom="@dimen/plaid_space_1x"
    android:textColor="@color/plaid_text_black_1000"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="@id/label"
    app:layout_constraintTop_toBottomOf="@id/label"
    tools:text="header" />

</androidx.constraintlayout.widget.ConstraintLayout>

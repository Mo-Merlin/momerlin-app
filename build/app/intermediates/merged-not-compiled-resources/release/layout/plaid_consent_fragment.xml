<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <com.plaid.internal.core.plaidstyleutils.PlaidNavigationBar
    android:id="@+id/plaid_navigation"
    android:layout_width="match_parent"
    android:layout_height="@dimen/plaid_navigation_height" />

  <ImageView
    android:id="@+id/logo"
    android:layout_width="match_parent"
    android:layout_height="@dimen/plaid_logo_height"
    android:layout_marginStart="@dimen/plaid_space_4x"
    android:layout_marginEnd="@dimen/plaid_space_4x"
    android:visibility="gone"
    tools:src="@drawable/pl_illustration_scene_add_details"
    tools:visibility="visible" />

  <TextView
    android:id="@+id/header"
    style="@style/PlaidText.H2.ExtraBold"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/plaid_space_4x"
    android:layout_marginEnd="@dimen/plaid_space_4x"
    android:layout_marginBottom="@dimen/plaid_space_2x"
    android:visibility="gone"
    app:plaid_alignment="center_single_line"
    tools:plaid_title="Wadsworth Demo uses Plaid to Link your bank"
    tools:visibility="visible" />

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/sellingPointsSection"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:clipToPadding="false"
    android:paddingStart="@dimen/plaid_space_4x"
    android:paddingEnd="@dimen/plaid_space_4x"
    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
    tools:listitem="@layout/plaid_selling_point_item" />

  <View
    android:id="@+id/plaid_divider"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/plaid_black_200"
    android:layout_marginTop="@dimen/plaid_space_2x"
    android:layout_marginBottom="@dimen/plaid_space_2x"/>

  <TextView
    android:id="@+id/continueDisclaimer"
    style="@style/PlaidText.B5.Regular"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/plaid_space_4x"
    android:layout_marginEnd="@dimen/plaid_space_4x"
    android:layout_marginBottom="@dimen/plaid_space_2x"
    android:gravity="center"
    android:visibility="gone"
    tools:text="By selecting 'Continue' you agree to the Plaid End User Privacy Policy"
    tools:visibility="visible" />

  <com.plaid.internal.core.plaidstyleutils.PlaidPrimaryButton
    android:id="@+id/primaryButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/plaid_space_4x"
    android:layout_marginEnd="@dimen/plaid_space_4x"
    android:layout_marginBottom="@dimen/plaid_space_4x"
    android:visibility="gone"
    tools:text="CONTINUE"
    tools:visibility="visible" />

  <com.plaid.internal.core.plaidstyleutils.PlaidSecondaryButton
    android:id="@+id/secondaryButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/plaid_space_4x"
    android:layout_marginEnd="@dimen/plaid_space_4x"
    android:layout_marginBottom="@dimen/plaid_space_5x"
    android:visibility="gone"
    tools:text="SECONDARY"
    tools:visibility="visible" />

</LinearLayout>

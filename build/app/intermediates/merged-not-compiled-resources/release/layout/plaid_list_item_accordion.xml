<merge xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  tools:orientation="vertical"
  tools:parentTag="android.widget.LinearLayout">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/plaid_small_list_item_size"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
      android:id="@+id/icon"
      android:layout_width="@dimen/plaid_small_list_item_icon_size"
      android:layout_height="@dimen/plaid_small_list_item_icon_size"
      android:tint="@color/plaid_list_item_text"
      tools:src="@drawable/pl_icon_bar_graph" />

    <!-- TODO: should we hardcode a color here? -->
    <TextView
      android:id="@+id/title"
      style="@style/PlaidText.H5.Regular"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_marginStart="@dimen/plaid_space_1x"
      android:layout_marginEnd="@dimen/plaid_space_1x"
      android:layout_weight="1"
      android:gravity="center_vertical"
      android:maxLines="2"
      android:textColor="@color/plaid_list_item_text"
      tools:text="Title" />

    <ImageView
      android:id="@+id/chevron"
      android:layout_width="@dimen/plaid_small_list_item_icon_size"
      android:layout_height="@dimen/plaid_small_list_item_icon_size"
      android:layout_marginStart="@dimen/plaid_space_1x"
      android:layout_marginEnd="@dimen/plaid_space_1x"
      android:src="@drawable/pl_icon_chevron_s1_down"
      android:tint="@color/plaid_list_item_text"
      tools:src="@drawable/pl_icon_chevron_s1_up" />
  </LinearLayout>

  <TextView
    android:id="@+id/info"
    style="@style/PlaidText.B3.Regular"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/plaid_space_3x"
    android:paddingBottom="@dimen/plaid_space_1x"
    android:visibility="gone"
    tools:text="More info about the accordion item goes into the extra text here that can be displayed by toggling the chevron."
    tools:visibility="visible" />

</merge>

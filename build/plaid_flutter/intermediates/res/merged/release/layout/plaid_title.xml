<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:orientation="vertical"
  tools:parentTag="android.widget.LinearLayout">

  <TextView
    android:id="@+id/plaid_title"
    style="@style/PlaidText.H3.ExtraBold"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:text="Sample title" />

  <TextView
    android:id="@+id/plaid_subtitle"
    style="@style/PlaidText.B1.Regular"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxLines="2"
    android:visibility="gone"
    tools:text="Some very interesting subtitle that spans across several lines into the next one"
    tools:visibility="visible" />
</merge>
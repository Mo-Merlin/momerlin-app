<merge xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

  <ImageView
    android:id="@+id/plaidInfoIcon"
    android:contentDescription="@string/plaid_information_icon"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:src="@drawable/pl_icon_information"
    app:layout_constraintHorizontal_chainStyle="spread_inside"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="@id/plaidDescriptionText" />

  <TextView
    android:id="@+id/plaidDescriptionText"
    style="@style/PlaidText.H5.Regular"
    android:ellipsize="end"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/plaid_space_1x"
    android:layout_marginEnd="@dimen/plaid_space_1x"
    android:layout_width="0dp"
    android:maxLines="2"
    app:layout_constraintBottom_toTopOf="@id/plaidCallToActionButton"
    app:layout_constraintHorizontal_chainStyle="spread_inside"
    app:layout_constraintLeft_toRightOf="@id/plaidInfoIcon"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_chainStyle="packed"
    tools:text="Something super long that will describe the whole darn thing very longly and wordily and verbosely and too many adjectives and bllalaa" />

  <TextView
    android:id="@+id/plaidCallToActionButton"
    style="@style/PlaidText.H5.SemiBold"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/plaid_space_1x"
    android:layout_marginEnd="@dimen/plaid_space_1x"
    android:layout_marginTop="@dimen/plaid_space_1x"
    android:layout_width="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintHorizontal_chainStyle="spread_inside"
    app:layout_constraintLeft_toRightOf="@id/plaidInfoIcon"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/plaidDescriptionText"
    app:layout_constraintVertical_chainStyle="packed"
    tools:text="Dismiss" />
</merge>

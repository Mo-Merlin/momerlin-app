<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/root"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <com.plaid.internal.core.plaidstyleutils.PlaidNavigationBar
    android:id="@+id/plaid_navigation"
    android:layout_width="match_parent"
    android:layout_height="@dimen/plaid_navigation_height" />

  <com.plaid.internal.core.plaidstyleutils.PlaidInstitutionHeaderItem
    android:id="@+id/plaid_institution"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/plaid_space_4x"
    android:layout_marginStart="@dimen/plaid_space_4x"
    android:visibility="gone"
    tools:visibility="visible" />

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:fillViewport="true">

    <LinearLayout
      android:id="@+id/plaidInputsLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginEnd="@dimen/plaid_space_4x"
      android:layout_marginStart="@dimen/plaid_space_4x"
      android:orientation="vertical"
      android:paddingBottom="@dimen/plaid_space_4x">

      <TextView
        android:id="@+id/header"
        style="@style/PlaidText.H2.ExtraBold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/plaid_space_1x"
        android:paddingBottom="@dimen/plaid_space_1x"
        android:enabled="true"
        android:gravity="start"
        android:textColor="@color/plaid_text_black_1000"
        android:visibility="gone"
        tools:text="header"
        tools:visibility="visible" />

      <TextView
        android:id="@+id/content"
        style="@style/PlaidText.B3.Regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/plaid_space_1x"
        android:paddingBottom="@dimen/plaid_space_1x"
        android:clickable="true"
        android:focusable="true"
        android:enabled="true"
        android:gravity="start"
        android:visibility="gone"
        tools:text="content"
        tools:visibility="visible" />

      <com.plaid.internal.core.plaidstyleutils.PlaidInput
        android:id="@+id/inputOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/plaid_space_1x"
        android:visibility="gone"
        tools:plaid_hint="Username"
        tools:visibility="visible" />

      <com.plaid.internal.core.plaidstyleutils.PlaidInput
        android:id="@+id/inputTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/plaid_space_1x"
        android:visibility="gone"
        tools:plaid_hint="PIN"
        tools:visibility="visible" />

      <com.plaid.internal.core.plaidstyleutils.PlaidInput
        android:id="@+id/inputThree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/plaid_space_1x"
        android:visibility="gone"
        tools:plaid_hint="Password"
        tools:visibility="visible" />

      <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

      <com.plaid.internal.core.plaidstyleutils.PlaidPrimaryButton
        android:id="@+id/primaryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/plaid_space_2x"
        android:visibility="gone"
        tools:text="primary button"
        tools:visibility="visible" />

      <com.plaid.internal.core.plaidstyleutils.PlaidTertiaryButton
        android:id="@+id/secondaryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/plaid_space_1x"
        android:visibility="gone"
        tools:text="secondary button"
        tools:visibility="visible" />

      <TextView
        android:id="@+id/footer"
        style="@style/PlaidText.B5.Regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/plaid_space_1x"
        android:visibility="gone"
        tools:text="This is a footer"
        tools:visibility="visible" />

    </LinearLayout>

  </ScrollView>

</LinearLayout>

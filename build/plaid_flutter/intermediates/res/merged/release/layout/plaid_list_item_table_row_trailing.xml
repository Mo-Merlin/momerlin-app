<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

  <TextView
    android:id="@+id/label"
    style="@style/PlaidText.B1.Semibold"
    android:enabled="true"
    android:gravity="start"
    android:layout_height="wrap_content"
    android:layout_width="0dp"
    android:paddingBottom="@dimen/plaid_space_2x"
    android:paddingTop="@dimen/plaid_space_2x"
    android:textColor="@color/plaid_black_1000"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@id/spacer"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="label" />

  <Space
    android:id="@+id/spacer"
    android:layout_width="@dimen/plaid_space_2x"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@id/title"
    app:layout_constraintStart_toEndOf="@id/label"
    app:layout_constraintTop_toTopOf="parent"/>

  <TextView
    android:id="@+id/title"
    style="@style/PlaidText.B1.Regular"
    android:gravity="start"
    android:layout_height="wrap_content"
    android:layout_width="0dp"
    android:paddingBottom="@dimen/plaid_space_2x"
    android:paddingTop="@dimen/plaid_space_2x"
    android:textColor="@color/plaid_text_black_800"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/spacer"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="title" />

</androidx.constraintlayout.widget.ConstraintLayout>

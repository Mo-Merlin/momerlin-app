<merge xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

  <ImageView
    android:id="@+id/plaidListItemImage"
    android:layout_width="@dimen/plaid_list_item_icon_size"
    android:layout_height="@dimen/plaid_list_item_icon_size"
    android:foregroundGravity="center"
    android:scaleType="centerInside"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:src="@color/plaid_blue_800" />

  <TextView
    android:id="@+id/plaidListItemTitle"
    style="@style/PlaidText.H5.SemiBold"
    android:textColor="@color/plaid_list_item_text"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/plaid_space_2x"
    android:layout_marginEnd="@dimen/plaid_space_2x"
    android:maxLines="2"
    app:layout_constraintBottom_toTopOf="@id/plaidListItemSubtitle"
    app:layout_constraintLeft_toRightOf="@id/plaidListItemImage"
    app:layout_constraintRight_toLeftOf="@id/plaidListItemCta"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_chainStyle="packed"
    tools:text="Bank of America" />

  <TextView
    android:id="@+id/plaidListItemSubtitle"
    style="@style/PlaidText.B3.Regular"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/plaid_space_2x"
    android:layout_marginEnd="@dimen/plaid_space_2x"
    android:maxLines="1"
    android:singleLine="true"
    android:textColor="@color/plaid_text_black_800"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toRightOf="@id/plaidListItemImage"
    app:layout_constraintRight_toLeftOf="@id/plaidListItemCta"
    app:layout_constraintTop_toBottomOf="@id/plaidListItemTitle"
    tools:text="www.bofa.com" />

  <ImageView
    android:id="@+id/plaidListItemCta"
    android:layout_width="@dimen/plaid_list_item_cta_size"
    android:layout_height="@dimen/plaid_list_item_cta_size"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:visibility="visible"
    tools:srcCompat="@drawable/pl_icon_information" />
</merge>
